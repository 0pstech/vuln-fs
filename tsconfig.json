{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": ["node_modules"]
}